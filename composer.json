{
  "name": "katoni/php-ffx",
  "description": "A pure PHP implementation of Format-preserving, Feistel-based encryption (FFX).",
  "keywords": [
    "katoni",
    "php-ffx",
    "ffx",
    "fpe",
    "encryption"
  ],
  "homepage": "https://github.com/katoni/php-ffx",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin Skovvang Petersen",
      "email": "martin@katoni.dk",
      "homepage": "https://katoni.dk",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.3 || ^8.0",
    "ext-gmp": "*"
  },
  "require-dev": {
    "phpunit/phpunit" : "^9.1.5",
    "mockery/mockery": "^1.4",
    "vimeo/psalm": "^3.11"
  },
  "autoload": {
    "psr-4": {
      "Katoni\\FFX\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Katoni\\FFX\\Tests\\": "tests"
    }
  },
  "scripts": {
    "psalm": "vendor/bin/psalm",
    "test": "vendor/bin/phpunit"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
